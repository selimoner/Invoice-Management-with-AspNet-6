@model testProject.ViewModels.CustomerModels.DeleteCustomerViewModel;

@{
    ViewData["Title"] = "Delete";
}

<h1>Deleting Customer</h1>

<h3>Are you sure you want to delete customer : @Model.Customer.CustomerName?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Customer Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            Tin Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerTinNumber)
        </dd>
        <dt class = "col-sm-2">
            Adress
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerAddress)
        </dd>
        <dt class = "col-sm-2">
            E-Mail Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerEmail)
        </dd>
        <dt class = "col-sm-2">
            Contact Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerContactNumber1)
        </dd>
        <dt class = "col-sm-2">
            Alt. Contact Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerContactNumber2)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
