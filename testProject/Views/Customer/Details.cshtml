@model testProject.ViewModels.CustomerModels.DetailsCustomerViewModel;

@{
    ViewData["Title"] = "Details";
}

<h1>Customer Details</h1>

<div>
    <h4>@Model.Customer.CustomerName</h4>
    <hr />
    <dl class="row">    
        <dt class = "col-sm-2">
            Customer Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            Tin Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerTinNumber)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerAddress)
        </dd>
        <dt class = "col-sm-2">
            E-Mail Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerEmail)
        </dd>
        <dt class = "col-sm-2">
            Contact Numer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerContactNumber1)
        </dd>
        <dt class="col-sm-2">
            Alt. Contact Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerContactNumber2)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Customer.Id }, new { @class = "btn btn-warning" }) |
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
