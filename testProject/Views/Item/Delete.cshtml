@model testProject.ViewModels.ItemModels.DeleteItemViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deleting Item</h1>

<h3>Are you sure you want to delete Item : @Model.Item.ItemDescription?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Item Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemCode)
        </dd>
        <dt class = "col-sm-2">
            Item Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
