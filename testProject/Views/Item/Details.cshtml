@model testProject.ViewModels.ItemModels.DetailsItemViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Item Details</h1>

<div>
    <h4>@Model.Item.ItemDescription</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Item Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemCode)
        </dd>
        <dt class = "col-sm-2">
            Item Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemDescription)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Item.Id }, new { @class = "btn btn-warning" }) |
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
