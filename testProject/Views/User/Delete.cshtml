@model testProject.ViewModels.AuthenticationViewModels.LoginViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deleting User</h1>

<h3>Are you sure you want to delete User : @Model.User.Username?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Password)
        </dd>
        <dt class = "col-sm-2">
            E-Mail Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.EmailAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Surname)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
